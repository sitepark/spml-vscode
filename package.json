{
  "name": "spml-vscode",
  "description": "Language Support for SPML (SitePark Markup Language)",
  "version": "0.0.1",
  "contributors": [
    "felix-becker"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "sitepark",
  "icon": "./resources/logo_dark.png",
  "main": "./dist/extension.js",
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "spml",
        "aliases": [
          "SitePark Markup Language",
          "spml",
          "SPML"
        ],
        "extensions": [
          ".spml"
        ],
        "icon": {
          "light": "./resources/logo_light.png",
          "dark": "./resources/logo_dark.png"
        },
        "configuration": "./spml.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "spml",
        "scopeName": "text.html.jsp.spml",
        "embeddedLanguages": {
          "source.css": "css",
          "source.js": "javascript"
        },
        "path": "./syntaxes/spml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "spml",
        "path": "./snippets/spml.code-snippets"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@vscode/vsce": "^2.25.0",
    "esbuild": "^0.20.2"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.sitepark.com/internal/spml-vscode"
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base --sourcemap",
    "esbuild-watch": "npm run esbuild-base --sourcemap --watch",
    "test-compile": "tsc -p ./"
  }
}
